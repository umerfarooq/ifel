<% title "Thank you for taking our quiz" %>

<div class="subPageWrapper">
  <%= link_to "7-DAY FREE TRIAL Sign Up Today!", signup_path, :class => "freeTrialBadge" %>

  <h1>COMMON QUESTIONS</h1>
  <ul id="breadcrumb">
  </ul>
  <div class="clear"></div>

  <h2 class="headLine">
    <%= "#{h(@quiz_reply.quiz.main_title)}?" %>
  </h2>

  <div class="floatL width450 alignC marginTop50">
    <%= image_tag @quiz_reply.quiz.picture.url, :alt => (@quiz_reply.quiz.main_title unless @quiz_reply.quiz.picture.blank? ) , :class => 'inlineImg' %>
  </div>
  <div class="floatR width450 gutterMarginLeft">
<%#= simple_format((@quiz_reply.quiz.main_text), :class => "leadInText") %>
    <div class="quizMainText">
      <%= ((@quiz_reply.quiz.main_text)) %>
    </div>
  </div>
</div> <!-- End of Sub page Wrapper -->

<div id="ContentBottom">
  <div class="wide">
    <h3 class="subHeadLine">
      Thank you for taking our quiz
    </h3>
    <h2 class="lightGreen">
      <%= result_heading_for(@quiz_reply) %>
    </h2>
    <p>
      <%= result_first_paragraph_for(@quiz_reply) %>
    </p>
    <p>
      <%= result_second_paragraph_for(@quiz_reply) %>
    </p>
    <p class="alignC">
      <%= link_to "FREE 7-DAY TRIAL!", signup_path, :class => "btnFreeTrial noFloat vAlign noTopMargin" %>
      <%= link_to "<b>Back</b>", (@back_url || root_path), :class => "vAlign noTopMargin" %>
    </p>
  </div>
</div>

