<a onclick="closeBox('<%= document_id %>');" style="float: none !important;"><div id="closeX" class="closeX"></div></a>
<div id="borderContainer">
  <div id="outercontainer">
    <div class="clear"></div>
    <div id="main">
      <span id="popular" class="popular"></span>
      <div class="pageContainer" id="emailPage">	
        <div id="email_main">
          <div id="emailcontainer">
            <div class="heading" id="heading_div">
              <h1 id="emailheading">EMAIL TO PEER/ADVISOR:</h1>
            </div>
            <div id="notice_<%=  document_id %>" class="notice"></div>
            <div class="field" id="to_div">
              <div class="input_holder">
                <div class="label" id="toString">To:</div>
                <input type="text" autocomplete="off" class="txtFromAddr" value="<%= @current_user.mentor.email if @current_user.mentor.present? %>" id="email_to_<%=  document_id %>" />
              </div>
            </div>

            <div class="field" id="from_div">
              <div class="input_holder">
                <div class="label" id="fromString">Subject:</div>
                <input type="text" autocomplete="off" class="txtFromAddr" id="email_subject_<%=  document_id %>" />
              </div>
            </div>
            <div class="field" id="message_div">
              <div class="input_holder">
                <div class="label" id="messageString">Message:</div>
                <textarea class="txtMessage" cols="10" rows="3" id="email_body_<%=  document_id %>"></textarea>
              </div>
            </div>
            
            <div class="field">
              <div class="label" id="messageString"><%= image_tag 'attachment.png' , :class=>'attIcon'%></div>
              <div class="attText"><%= document.data_file_name %></div>
              
            </div>
            
            <div class="field" id="buttons_div">
              <a onclick="sendShareEmail('<%= document_id %>', '<%= document.id.to_s %>');" style="color: white; float: right;"><div class="button_holder" id="btnShareSend" >Send</div></a>
              <div class="clear"></div>
            </div>
            <div class="clear"></div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="shareFooter">
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</div>

