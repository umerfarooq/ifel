<%= render :partial => "admins/admin_roadmap_menu", :locals => { :active_admin_roadmap_tab => :action_items_tab } %>

<div class="admnRitCol">
  <h1>Edit Resource Section Template Description Page</h1>

  <% form_for @resource_text_message, :url => update_resource_message_resource_category_path(@resource_text_message) do |f| %>
    <%= f.error_messages %>
  <%#= hidden_field_tag "back", @back %>
    <p>
      <%= f.label :title %>
      <br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %>
      <br />
      <%= f.text_area :description, :class => "adminEditor" %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
</div>
