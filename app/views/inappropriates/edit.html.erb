<%= render :partial => "admins/admin_sub_menu", :locals => { :active_admin_sub_tab => :community_tab } %>

<div class="admnRitCol">
  <strong>
    <% if @inappropriate.appropriable.class == Message %>
      <%= link_to 'Message', message_path(@inappropriate.appropriable) %>
    <% else %>
      <%= "Comment | #{link_to 'Original Message', message_path(@inappropriate.appropriable.message)}" %>
    <% end %>
    <%= "| #{link_to 'Respond', edit_inappropriate_path(@inappropriate)}" %>
  </strong>
  <br />
  <strong>Request By</strong>
  <%= @inappropriate.user.screen_name %>
  <br />
  <% unless @inappropriate.description.blank? %>
    <strong>Request Description</strong>
    <%= @inappropriate.description %>
    <br />
  <% end %>
  <strong>Message By</strong>
  <%= @inappropriate.appropriable.user.screen_name %>
  <br />
  <strong>Message Text</strong>
  <%= @inappropriate.appropriable.body %>
  <br />
  <br />
  <% form_for @inappropriate do |f| %>
    <%= f.label :answer %>
    <br />
    <%= f.text_area :answer, :size => "100x10" %>
    <br />
    <br />
    <%= f.check_box :suitable %>
    <%= f.label :suitable %>
    <br />
    <br />
    <%= f.check_box :is_answered %>
    <%= f.label :is_answered %>
    <br />
    <br />
    <%= f.submit :update %>
    <br />
  <% end %>
  <br />
</div>
