<% form_tag '/have_a_question', :id=>'have_question_form', :method=>:post  do %>
  <fieldset>
    <legend>HAVE A QUESTION? ASK US</legend>
    <label style="font-weight: normal; margin-top: 5px;">Send us your question and we will examine it to be included in our Common Questions set.</label>
    <table style="width:100%;">
      <tr>
        <td style="text-align: center;padding-top: 5px; font-weight: normal;">
          <label id="notice" style="color: red;"></label>
        </td>
      </tr>
      <tr> 
        <td><%= text_field_tag 'question[name]','', :title => 'Your Name', :class => "defaultText", :size => '30' %></td>
      </tr>
      <tr>
        <td><%= text_field_tag 'question[email]','', :title => 'Your Email', :class => "defaultText", :size => '30' %></td>
      </tr>
      <tr>        
        <td><%= text_field_tag 'question[statement]','', :title => 'Your Question', :class => "defaultText", :size => '30' %></td>
      </tr>
      <tr>  
        <td><%= submit_tag 'Submit', :class => "submit" %></td>
      </tr>
    </table>
  </fieldset>
<% end %>
