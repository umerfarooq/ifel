<% title "How Can WIBO.WickedStart.com Help You Start A Small Business" %>
<% meta "Learn more how WickedStart can help you start a small business using an online platform tools to help start up your small business." %>
<% if @open_video %>
  <%content_for :javascripts do%>
    <script>
      $(document).ready(function() {
        $.fn.colorbox({

          html:"<div style='z-index:0;  padding:30;' class ='flvIe8'>\n\
                  <object width='635' height='480' id='flvPlayer'>\n\
                    <param name='allowFullScreen' value='true' />\n\
                    <param name='movie' value='/flvplayer/player.swf?movie=<%= @how_it_works.url_for_video_player %>&bgcolor=0x1dbdbdb&fgcolor=0x1b75bb&volume=50&autoload=off&autoplay=on&autorewind=on&clickurl=&clicktarget=' />\n\
                    <embed src='/flvplayer/player.swf?movie=<%= @how_it_works.url_for_video_player %>&bgcolor=0x1dbdbdb&fgcolor=0x1b75bb&volume=5&autoload=off&autorewind=on&autoplay=on&clickurl=&clicktarget=' width='635' height='480' allowFullScreen='true' type='application/x-shockwave-flash' wmode='opaque' >\n\
